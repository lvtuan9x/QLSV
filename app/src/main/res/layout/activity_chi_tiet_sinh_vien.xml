<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySinhVien.ChiTietSinhVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin sinh viên"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#E81212"
            android:gravity="center"
            android:layout_marginTop="56dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Mã sinh viên: "
                android:textSize="26dp"
                android:textColor="@color/black"
                android:src="@drawable/avt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tên sinh viên: "
                android:textSize="26dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvttTenSV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tên sinh viên"
                android:textSize="26dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mã sinh viên: "
                android:textSize="26dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvttMaSV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mã sinh viên"
                android:textSize="26dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/btnttSua"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Quay lại"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/baseline_delete_24"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/btnttXoa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Tạo file"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/baseline_edit_24"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btnttQL"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Quay lại"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4775EC"
                android:textSize="20dp"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>